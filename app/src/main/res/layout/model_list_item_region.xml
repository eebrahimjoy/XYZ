<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/regionTV"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_fill_with_radius"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <Button
                android:id="@+id/region2TV"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_fill_with_radius_gray"
                android:text="Tangail"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/small_text_size" />
            <Button
                android:id="@+id/region3TV"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_fill_with_radius_gray"
                android:text="Gazipur"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/small_text_size" />
            <Button
                android:id="@+id/region4TV"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_fill_with_radius_gray"
                android:text="Savar"
                android:textAllCaps="false"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>


    </RelativeLayout>
</layout>
